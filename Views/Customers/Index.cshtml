@model IEnumerable<nikhilTask.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="CreateCustomer">
        <i class="material-icons text-primary w-50" style="font-size:50px" >add</i>

    </a>
</p>
<div class="table-responsive">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Thumbnailurl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dateofbirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Emailid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mobilenumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Createdtimestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastupdatedtimestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        <img src="~/thumbnails/@item.Thumbnailurl" alt="@item.Thumbnailurl" width="100px" style="height:100px" class="img-thumbnail h-auto rounded" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dateofbirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emailid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobilenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Createdtimestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastupdatedtimestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address.Id)
                    </td>
                    <td>
                        <a asp-action="EditCustomer" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="DeleteCustomer" asp-route-id="@item.Id">
                            <i class="material-icons text-danger">
                                close
                            </i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
